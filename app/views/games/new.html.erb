<h1>New Game</h1>
<div class="grid-content">
  <% @letters.each do |letter| %>
    <span class="grid-letters"><%= letter %></span>
  <% end %>
</div>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @letters %>
  <%= hidden_field_tag 'start', (Time.now).to_i %>
  <div class="form-group">
    <input type="text" name="word" placeholder="What's the longest word possible..?" class="form-control">
    <small class="form-text text-muted">Be the best or feel shame.</small>
  </div>
  <input type="submit" class="btn btn-primary">
</form>
